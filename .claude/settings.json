{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "respectGitignore": true,
  "cleanupPeriodDays": 30,
  "env": {
    "COMPOSER_MEMORY_LIMIT": "-1"
  },
  "attribution": {
    "commit": "Co-Authored-By: Claude Sonnet 4.5 <noreply@anthropic.com>",
    "pr": "ü§ñ G√©n√©r√© avec [Claude Code](https://claude.com/claude-code)"
  },
  "permissions": {
    "ask": [
      "Bash(command~migrate:fresh)",
      "Bash(command~db:wipe)",
      "Bash(command~TRUNCATE)",
      "Bash(command~DROP.*TABLE)"
    ],
    "defaultMode": "plan"
  },
  "model": "claude-sonnet-4-5",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo '‚úì Fichier cr√©√©/modifi√©: {{tool_input.file_path}}'"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo '‚úì √âdition appliqu√©e dans: {{tool_input.file_path}}'"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "git status --porcelain | head -5"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true
  },
  "language": "french"
}
